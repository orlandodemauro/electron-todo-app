{
  "name": "todo-app",
  "version": "1.0.0",
  "license": "MIT",
  "main": "main.js",
  "description": "TODO electron app",
  "author": {
    "name": "Orlando De Mauro <odemauro@everis.com>"
  },
  "build": {
    "productName": "TODO-App",
    "appId": "org.Everis.org",
    "files": {
      "from": "dist/",
      "filter": [
        "**/*"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "public.app.category.science"
    },
    "directories": {
      "buildResources": "./src/electron/build",
      "output": "release"
    }
  },
  "scripts": {
    "electron": "npm run electron:dev",
    "electron:dev": "npm run build:electron:main && electron ./dist --dev",
    "electron:prod": "npm run build:prod && electron ./dist",
    "start:dev": "ng build --watch",
    "start": "npm run build-electron && electron ./dist --dev",
    "ng": "ng",
    "start-angular": "ng serve",
    "build": "ng build && npm run build:electron:main",
    "build:prod": "npm run build -- --prod",
    "build:electron:main": "gulp && cd dist && npm install --prod && cd ..",
    "preDist": "npm run build:prod",
    "pack": "electron-builder --dir",
    "dist:all": "npm run preDist && electron-builder -mwl",
    "dist:linux": "npm run preDist && electron-builder -l",
    "dist:osx": "npm run preDist && electron-builder -m",
    "dist:win": "npm run preDist  && electron-builder -w --x64",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "4.3.1",
    "@angular/common": "4.3.1",
    "@angular/compiler": "4.3.1",
    "@angular/core": "4.3.1",
    "@angular/forms": "4.3.1",
    "@angular/http": "4.3.1",
    "@angular/platform-browser": "4.3.1",
    "@angular/platform-browser-dynamic": "4.3.1",
    "@angular/platform-server": "4.3.1",
    "@angular/router": "4.3.1",
    "core-js": "^2.5.6",
    "ipc-promise": "0.1.4",
    "rxjs": "^5.5.10",
    "todomvc-app-css": "^2.1.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "1.6.5",
    "@angular/compiler-cli": "4.1.3",
    "@types/fullcalendar": "2.7.40",
    "@types/jasmine": "2.5.38",
    "@types/jquery": "2.0.41",
    "@types/jquery.slimscroll": "1.3.30",
    "@types/lodash": "4.14.61",
    "@types/node": "8.0.34",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "codelyzer": "~3.0.1",
    "electron": "1.8.4",
    "electron-builder": "^19.27.4",
    "electron-rebuild": "^1.7.2",
    "electron-reload": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.3",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ncp": "2.0.0",
    "protractor": "~5.1.2",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  }
}
